{
    "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "ignore": [
            "node_modules",
            "static"
        ]
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "jsxQuoteStyle": "single",
            "quoteProperties": "asNeeded",
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "trailingComma": "all"
        }
    },
    "linter": {
        "enabled": true,
        "ignore": [
            "node_modules"
        ],
        "rules": {
            "recommended": true,
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "style": {
                "noNonNullAssertion": "warn"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            },
            "performance": {
                "noAccumulatingSpread": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    }
}